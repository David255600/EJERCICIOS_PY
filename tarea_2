import random

# Lista de palabras para el juego
palabras = ["python", "computadora", "programacion", "desarrollo", "teclado", "internet"]

def mostrar_tablero(palabra_secreta, letras_adivinadas):
    tablero = ""
    for letra in palabra_secreta:
        if letra in letras_adivinadas:
            tablero += letra + " "
        else:
            tablero += "_ "
    return tablero

def ahorcado():
    print("ğŸ® Â¡Bienvenido al juego del Ahorcado! ğŸ®")
    
    palabra_secreta = random.choice(palabras)
    letras_adivinadas = []
    intentos = 6  # NÃºmero clÃ¡sico de intentos

    while intentos > 0:
        print("\nPalabra: ", mostrar_tablero(palabra_secreta, letras_adivinadas))
        print(f"Intentos restantes: {intentos}")

        letra = input("Ingresa una letra: ").lower()

        if letra in letras_adivinadas:
            print("Ya adivinaste esa letra. Intenta otra.")
            continue

        letras_adivinadas.append(letra)

        if letra not in palabra_secreta:
            intentos -= 1
            print("âŒ Â¡Incorrecto!")
        else:
            print("âœ” Â¡Correcto!")

        # Verificar si ganÃ³
        completo = True
        for letra_secreta in palabra_secreta:
            if letra_secreta not in letras_adivinadas:
                completo = False
                break

        if completo:
            print("\nğŸ‰ Â¡Felicidades, ganaste! ğŸ‰")
            print("La palabra era:", palabra_secreta)
            return

    # Si pierde
    print("\nğŸ’€ Â¡Perdiste! Te quedaste sin intentos.")
    print("La palabra era:", palabra_secreta)

# Ejecutar el juego
ahorcado()
